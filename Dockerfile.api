FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY package-lock.json* ./

# Install production dependencies only
RUN npm ci --only=production

# Copy source (server.mjs and needed files)
COPY server.mjs ./
COPY tools.mjs ./
COPY github-client.mjs ./
COPY dist/ ./dist/

# Expose API port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:3001/health || exit 1

# Run as root to read mounted volumes
USER root

CMD ["node", "server.mjs"]
